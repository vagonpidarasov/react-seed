{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "jsx": "react",
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules",
        "cypress"
    ]
}
